<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h2>Review restaurant</h2>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <p> <%= f.input :content %> </p>
      <p> <%= f.input :rating, collection: (0..5) %> </p>
      <p> <%= f.submit "add a review", class: "btn btn-primary" %> </p>
    <% end %>

    </div>
  </div>
</div>

