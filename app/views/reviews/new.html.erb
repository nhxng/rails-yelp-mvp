<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h2>Review restaurant</h2>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: (0..5) %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>


    </div>
  </div>
</div>
